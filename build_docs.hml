// Translate a section name to the target language
fn translate_section(section_name: string, lang: string): string {
    if (lang == "en") {
        return section_name;
    }
    let translations = SECTION_TRANSLATIONS[lang];
    if (translations != null && translations[section_name] != null) {
        return translations[section_name];
    }
    return section_name;
}

// Translate a page title to the target language
fn translate_title(title: string, lang: string): string {
    if (lang == "en") {
        return title;
    }
    let translations = TITLE_TRANSLATIONS[lang];
    if (translations != null && translations[title] != null) {
        return translations[title];
    }
    return title;
}

// Read file content safely
fn safe_read_file(path: string): string {
    try {
        return read_file(path);
    } catch (e) {
        print("Warning: Could not read " + path + ": " + e);
        return "";
    }
}

// Get the translated file path if it exists, otherwise return the original
fn get_translated_path(original_path: string, lang: string): string {
    if (lang == "en") {
        return original_path;
    }

    let translated_path = TRANSLATIONS_DIR + "/" + lang + "/" + original_path;

    if (exists(translated_path)) {
        return translated_path;
    }

    return original_path;
}

// Read file content, preferring translation if available
// Returns object with content and is_translated flag
fn read_file_with_translation(path: string, lang: string) {
    let translated_path = get_translated_path(path, lang);
    let content = safe_read_file(translated_path);
    let is_translated = translated_path != path && exists(translated_path);
    return {
        content: content,
        is_translated: is_translated
    };
}

// Convert text to title case, preserving acronyms like API, FFI, IO, etc.
fn smart_title(text: string): string {
    let parts = text.replace_all("-", " ").replace_all("_", " ").split(" ");
    let result = "";

    let i = 0;
    while (i < parts.length) {
        let part = parts[i];
        if (part.length > 0) {
            // Capitalize first letter
            let first = part.slice(0, 1).to_upper();
            let rest = part.slice(1, part.length);

            if (result.length > 0) {
                result = result + " ";
            }
            result = result + first + rest;
        }
        i = i + 1;
    }

    // Fix common acronyms that should stay uppercase
    result = result.replace_all("Api", "API");
    result = result.replace_all("Ffi", "FFI");
    result = result.replace_all("Io", "IO");
    result = result.replace_all("Cli", "CLI");
    result = result.replace_all("Ast", "AST");
    result = result.replace_all("Url", "URL");
    result = result.replace_all("Http", "HTTP");
    result = result.replace_all("Https", "HTTPS");
    result = result.replace_all("Json", "JSON");
    result = result.replace_all("Xml", "XML");
    result = result.replace_all("Sql", "SQL");
    result = result.replace_all("Ssl", "SSL");
    result = result.replace_all("Tls", "TLS");
    result = result.replace_all("Tcp", "TCP");
    result = result.replace_all("Udp", "UDP");
    result = result.replace_all("Cpu", "CPU");
    result = result.replace_all("Gpu", "GPU");
    result = result.replace_all("Html", "HTML");
    result = result.replace_all("Css", "CSS");
    result = result.replace_all("Csv", "CSV");
    result = result.replace_all("Hpm", "HPM");

    return result;
}

// Encode image as base64 data URL
fn encode_image(path: string): string {
    try {
        let data = read_file(path);
        let encoded = base64_encode(data);

        // Determine MIME type from extension
        let ext = "";
        let parts = path.split(".");
        if (parts.length > 0) {
            ext = parts[parts.length - 1].to_lower();
        }

        let mime = "image/png";
        if (ext == "jpg" || ext == "jpeg") {
            mime = "image/jpeg";
        }

        return "data:" + mime + ";base64," + encoded;
    } catch (e) {
        print("Warning: Could not encode image " + path + ": " + e);
        return "";
    }
}

// Convert markdown file links to hash-based page IDs
// Examples:
//     [Tutorial](tutorial.md) -> [Tutorial](#getting-started-tutorial)
//     [Syntax](../language-guide/syntax.md) -> [Syntax](#language-guide-syntax)
fn convert_md_links(content: string, current_section: string): string {
    let result = content;

    // Find and replace markdown links: [text](path.md)
    // We need to manually parse since we don't have regex
    let i = 0;
    while (i < result.length) {
        // Look for '['
        if (result.slice(i, i + 1) == "[") {
            // Find the closing ']'
            let bracket_end = i + 1;
            let depth = 1;
            while (bracket_end < result.length && depth > 0) {
                let ch = result.slice(bracket_end, bracket_end + 1);
                if (ch == "[") {
                    depth = depth + 1;
                } else if (ch == "]") {
                    depth = depth - 1;
                }
                bracket_end = bracket_end + 1;
            }

            // Check if followed by '('
            if (bracket_end < result.length && result.slice(bracket_end, bracket_end + 1) == "(") {
                // Find the closing ')'
                let paren_start = bracket_end + 1;
                let paren_end = paren_start;
                while (paren_end < result.length && result.slice(paren_end, paren_end + 1) != ")") {
                    paren_end = paren_end + 1;
                }

                if (paren_end < result.length) {
                    let link_text = result.slice(i + 1, bracket_end - 1);
                    let path = result.slice(paren_start, paren_end);

                    // Skip external URLs, anchor-only links, and non-markdown links
                    let skip = false;
                    if (path.starts_with("http://") || path.starts_with("https://") ||
                        path.starts_with("#") || path.starts_with("mailto:")) {
                        skip = true;
                    }
                    if (!path.ends_with(".md")) {
                        skip = true;
                    }

                    if (!skip) {
                        // Parse the path to get section and filename
                        let new_href = convert_md_path_to_hash(path, current_section);
                        let new_link = "[" + link_text + "](" + new_href + ")";
                        let old_link = result.slice(i, paren_end + 1);

                        result = result.slice(0, i) + new_link + result.slice(paren_end + 1, result.length);
                        i = i + new_link.length;
                        continue;
                    }
                }
            }
        }
        i = i + 1;
    }

    return result;
}

// Convert a markdown path to a hash-based page ID
fn convert_md_path_to_hash(path: string, current_section: string): string {
    // Normalize path separators
    let normalized = path.replace_all("\\", "/");

    // Handle relative paths like ../language-guide/syntax.md
    if (normalized.starts_with("../")) {
        let parts = normalized.split("/");
        // Find first non-.. part (the section)
        let section_idx = 0;
        let k = 0;
        while (k < parts.length) {
            if (parts[k] != "..") {
                section_idx = k;
                k = parts.length; // break
            }
            k = k + 1;
        }

        if (section_idx < parts.length - 1) {
            let section = parts[section_idx];
            let filename = parts[parts.length - 1];
            // Remove .md extension
            filename = filename.slice(0, filename.length - 3);
            return "#" + section + "-" + filename;
        }
    } else if (normalized.contains("/")) {
        // Direct path like language-guide/syntax.md
        let parts = normalized.split("/");
        let section = current_section;
        if (parts.length >= 2) {
            section = parts[parts.length - 2];
        }
        let filename = parts[parts.length - 1];
        // Remove .md extension
        filename = filename.slice(0, filename.length - 3);
        return "#" + section + "-" + filename;
    } else {
        // Same directory link like tutorial.md
        let filename = normalized.slice(0, normalized.length - 3);
        return "#" + current_section + "-" + filename;
    }

    return "#" + path;
}

// Collect all documentation files from hemlock and hpm submodules
fn collect_docs(lang: string) {
    let docs = {};
    let translation_stats = { translated: 0, fallback: 0 };

    // Add CLAUDE.md as the main documentation
    let claude_path = HEMLOCK_DIR + "/CLAUDE.md";
    if (exists(claude_path)) {
        let result = read_file_with_translation(claude_path, lang);
        let content = convert_md_links(result.content, "language-reference");
        let title = translate_section("Language Reference", lang);
        docs[title] = {
            id: "language-reference",
            content: content,
            order: 0,
            section: ""
        };
        if (result.is_translated) {
            translation_stats.translated = translation_stats.translated + 1;
        } else {
            translation_stats.fallback = translation_stats.fallback + 1;
        }
    }

    // Define section order for hemlock docs
    let section_dirs = ["getting-started", "language-guide", "advanced", "reference", "design", "contributing"];
    let section_names = ["Getting Started", "Language Guide", "Advanced Topics", "API Reference", "Design & Philosophy", "Contributing"];

    // Collect docs from hemlock/docs/ directory
    let docs_dir = HEMLOCK_DIR + "/docs";
    if (exists(docs_dir)) {
        let i = 0;
        while (i < section_dirs.length) {
            let subdir = section_dirs[i];
            let section_name = section_names[i];
            let translated_section = translate_section(section_name, lang);
            let subdir_path = docs_dir + "/" + subdir;

            if (exists(subdir_path) && is_dir(subdir_path)) {
                let entries = list_dir(subdir_path);

                let j = 0;
                while (j < entries.length) {
                    let entry = entries[j];

                    // Only process .md files, skip development docs
                    if (entry.ends_with(".md") && !entry.contains("development")) {
                        let md_path = subdir_path + "/" + entry;

                        if (is_file(md_path)) {
                            // Convert filename to title
                            let file_name = entry.slice(0, entry.length - 3);  // Remove .md
                            let title = smart_title(file_name);
                            let translated_title = translate_title(title, lang);
                            let doc_id = subdir + "-" + file_name;

                            let result = read_file_with_translation(md_path, lang);
                            let content = convert_md_links(result.content, subdir);

                            let key = translated_section + " -> " + translated_title;
                            docs[key] = {
                                id: doc_id,
                                content: content,
                                order: i + 1,
                                section: translated_section
                            };

                            if (result.is_translated) {
                                translation_stats.translated = translation_stats.translated + 1;
                            } else {
                                translation_stats.fallback = translation_stats.fallback + 1;
                            }
                        }
                    }
                    j = j + 1;
                }
            }
            i = i + 1;
        }
    }

    // Collect hpm documentation
    let hpm_docs_dir = HPM_DIR + "/docs";
    if (exists(hpm_docs_dir) && is_dir(hpm_docs_dir)) {
        // hpm documentation file mappings
        let hpm_files = ["installation", "quick-start", "project-setup", "commands", "configuration", "troubleshooting", "creating-packages", "package-spec", "versioning", "architecture", "exit-codes"];
        let hpm_sections = ["hpm: Getting Started", "hpm: Getting Started", "hpm: Getting Started", "hpm: User Guide", "hpm: User Guide", "hpm: User Guide", "hpm: Package Development", "hpm: Package Development", "hpm: Package Development", "hpm: Reference", "hpm: Reference"];
        let hpm_orders = [10, 10, 10, 11, 11, 11, 12, 12, 12, 13, 13];

        let entries = list_dir(hpm_docs_dir);
        let j = 0;
        while (j < entries.length) {
            let entry = entries[j];

            // Only process .md files, skip README
            if (entry.ends_with(".md") && !entry.to_lower().contains("readme")) {
                let md_path = hpm_docs_dir + "/" + entry;

                if (is_file(md_path)) {
                    let file_name = entry.slice(0, entry.length - 3);  // Remove .md
                    let title = smart_title(file_name);
                    let translated_title = translate_title(title, lang);
                    let doc_id = "hpm-" + file_name;

                    // Find section and order for this file
                    let section_name = "hpm: Other";
                    let order = 14;
                    let k = 0;
                    while (k < hpm_files.length) {
                        if (hpm_files[k] == file_name) {
                            section_name = hpm_sections[k];
                            order = hpm_orders[k];
                        }
                        k = k + 1;
                    }

                    let translated_section = translate_section(section_name, lang);
                    let result = read_file_with_translation(md_path, lang);
                    let content = convert_md_links(result.content, "hpm-" + file_name);

                    let key = translated_section + " -> " + translated_title;
                    docs[key] = {
                        id: doc_id,
                        content: content,
                        order: order,
                        section: translated_section
                    };

                    if (result.is_translated) {
                        translation_stats.translated = translation_stats.translated + 1;
                    } else {
                        translation_stats.fallback = translation_stats.fallback + 1;
                    }
                }
            }
            j = j + 1;
        }
    }

    // Print translation stats for non-English builds
    if (lang != "en") {
        let total = translation_stats.translated + translation_stats.fallback;
        if (total > 0) {
            let percent = (100 * translation_stats.translated) / total;
            print("  Translation coverage: " + translation_stats.translated + "/" + total + " pages (" + percent + "%)");
        }
    }

    return docs;
}

// Get all doc keys in sorted order
fn get_sorted_doc_keys(docs, lang: string) {
    let keys = [];

    // Add Language Reference first if it exists
    let lang_ref_title = translate_section("Language Reference", lang);
    if (docs[lang_ref_title] != null) {
        keys.push(lang_ref_title);
    }

    // Then add hemlock sections in order
    let docs_dir = HEMLOCK_DIR + "/docs";
    let section_dirs = ["getting-started", "language-guide", "advanced", "reference", "design", "contributing"];
    let section_names = ["Getting Started", "Language Guide", "Advanced Topics", "API Reference", "Design & Philosophy", "Contributing"];

    let i = 0;
    while (i < section_dirs.length) {
        let subdir = section_dirs[i];
        let section_name = section_names[i];
        let translated_section = translate_section(section_name, lang);
        let subdir_path = docs_dir + "/" + subdir;

        if (exists(subdir_path) && is_dir(subdir_path)) {
            let entries = list_dir(subdir_path);

            let j = 0;
            while (j < entries.length) {
                let entry = entries[j];
                if (entry.ends_with(".md") && !entry.contains("development")) {
                    let file_name = entry.slice(0, entry.length - 3);
                    let title = smart_title(file_name);
                    let translated_title = translate_title(title, lang);
                    let key = translated_section + " -> " + translated_title;

                    // Check if this key exists in docs
                    if (docs[key] != null) {
                        keys.push(key);
                    }
                }
                j = j + 1;
            }
        }
        i = i + 1;
    }

    // Add hpm documentation sections
    let hpm_docs_dir = HPM_DIR + "/docs";
    if (exists(hpm_docs_dir) && is_dir(hpm_docs_dir)) {
        // hpm documentation in order
        let hpm_files = ["installation", "quick-start", "project-setup", "commands", "configuration", "troubleshooting", "creating-packages", "package-spec", "versioning", "architecture", "exit-codes"];
        let hpm_sections = ["hpm: Getting Started", "hpm: Getting Started", "hpm: Getting Started", "hpm: User Guide", "hpm: User Guide", "hpm: User Guide", "hpm: Package Development", "hpm: Package Development", "hpm: Package Development", "hpm: Reference", "hpm: Reference"];

        let k = 0;
        while (k < hpm_files.length) {
            let file_name = hpm_files[k];
            let section_name = hpm_sections[k];
            let translated_section = translate_section(section_name, lang);
            let title = smart_title(file_name);
            let translated_title = translate_title(title, lang);
            let key = translated_section + " -> " + translated_title;

            if (docs[key] != null) {
                keys.push(key);
            }
            k = k + 1;
        }
    }

    return keys;
}

// Generate navigation HTML
fn generate_nav_html(docs: object, sorted_keys: array): string {
    let nav_items = [];
    let current_section = "";

    let i = 0;
    while (i < sorted_keys.length) {
        let title = sorted_keys[i];
        let info = docs[title];
        let section = info.section;

        // Add section header if it's a new section
        if (section != "" && section != current_section) {
            if (current_section != "") {
                nav_items.push("</div>");
            }
            nav_items.push("<div class=\"nav-section\">");
            nav_items.push("<div class=\"nav-section-title\">" + section + "</div>");
            current_section = section;
        } else if (section == "" && current_section != "") {
            nav_items.push("</div>");
            current_section = "";
        } else if (section == "" && current_section == "" && i == 0) {
            nav_items.push("<div class=\"nav-section\">");
            current_section = "main";
        }

        // Simplify title for navigation (remove section prefix)
        let nav_title = title;
        if (title.contains(" -> ")) {
            let parts = title.split(" -> ");
            if (parts.length > 1) {
                nav_title = parts[parts.length - 1];
            }
        }

        nav_items.push("<a href=\"#" + info.id + "\" class=\"nav-link\" data-page=\"" + info.id + "\">" + nav_title + "</a>");

        i = i + 1;
    }

    if (current_section != "") {
        nav_items.push("</div>");
    }

    return nav_items.join("\n");
}

// Generate pages JSON
fn generate_pages_json(docs: object, sorted_keys: array): string {
    let pages = {};

    let i = 0;
    while (i < sorted_keys.length) {
        let title = sorted_keys[i];
        let info = docs[title];
        pages[title] = {
            id: info.id,
            content: info.content
        };
        i = i + 1;
    }

    return stringify(pages);
}

// Generate language switcher options HTML
fn generate_lang_options(current_lang: string): string {
    let options = [];
    let langs = ["en", "zh", "de", "es", "ja"];

    let i = 0;
    while (i < langs.length) {
        let code = langs[i];
        let name = SUPPORTED_LANGUAGES[code];
        let filename = "docs.html";
        if (code != "en") {
            filename = "docs-" + code + ".html";
        }
        let selected = "";
        if (code == current_lang) {
            selected = " selected";
        }
        options.push("<option value=\"" + filename + "\"" + selected + ">" + name + "</option>");
        i = i + 1;
    }

    return options.join("\n");
}

